<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px; -fx-font-size: 14px;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cat.ferreria.dekstop.Controller.ModificarLibroController">

    <Label text="Modificar Libro" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="ISBN:" minWidth="100"/>
        <TextField fx:id="isbnField" prefWidth="250" editable="false" />
    </HBox>

    <HBox spacing="10">
        <Label text="Título:" minWidth="100"/>
        <TextField fx:id="tituloField" prefWidth="250" />
    </HBox>

    <HBox spacing="10">
        <Label text="Autor:" minWidth="100"/>
        <TextField fx:id="autorField" prefWidth="250" />
    </HBox>

    <HBox spacing="10">
        <Label text="Editorial:" minWidth="100"/>
        <TextField fx:id="editorialField" prefWidth="250" />
    </HBox>

    <HBox spacing="10">
        <Label text="Categoría:" minWidth="100"/>
        <ComboBox fx:id="categoriaComboBox" prefWidth="250" />
    </HBox>

    <HBox spacing="10">
        <Label text="Estado de Uso:" minWidth="100"/>
        <ComboBox fx:id="estadoComboBox" prefWidth="250" />
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnGuardar" text="Guardar Cambios" prefWidth="150" />
        <Button fx:id="btnCancelar" text="Cancelar" prefWidth="150" />
    </HBox>

</VBox>
