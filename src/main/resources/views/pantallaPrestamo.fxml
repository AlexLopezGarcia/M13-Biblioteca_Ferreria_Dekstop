<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="20" vgap="20"
          style="-fx-padding: 20px; -fx-font-size: 16px;"
          xmlns="http://javafx.com/javafx/11.0.14-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cat.ferreria.dekstop.controller.PrestamoController">

    <Label text="ID del libro:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="libroIdField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER">
        <children>
            <Button fx:id="btnPrestar" text="Prestar" prefWidth="120"/>
            <Button fx:id="btnDevolver" text="Devolver" prefWidth="120"/>
        </children>
    </HBox>

    <Label fx:id="mensajeLabel" text="" GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="2" wrapText="true" style="-fx-text-fill: black; -fx-font-size: 14px;"/>

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
