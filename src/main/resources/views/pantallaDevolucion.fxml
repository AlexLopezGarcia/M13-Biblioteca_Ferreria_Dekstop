<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="20" vgap="20"
          style="-fx-padding: 20px; -fx-font-size: 16px;"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="cat.ferreria.dekstop.controller.DevolucionController">

    <Label text="ID del libro:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="libroIdField" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button fx:id="btnDevolver" text="Devolver" prefWidth="200"
            GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>

    <Label fx:id="mensajeLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"
           wrapText="true" style="-fx-text-fill: black; -fx-font-size: 14px;"/>
</GridPane>
