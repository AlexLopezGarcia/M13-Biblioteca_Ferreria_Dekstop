<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cat.ferreria.dekstop.controller.SesionController">

    <children>
        <Label fx:id="labelCorreo" layoutX="124.0" layoutY="149.0" text="Correo Electrónico:" />
        <Label fx:id="labelIniciarSesion" layoutX="231.0" layoutY="39.0" text="Iniciar Sesión">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <TextField fx:id="correoTextField" layoutX="231.0" layoutY="145.0" prefHeight="25.0" prefWidth="205.0" />
        <Label fx:id="labelContrasena" layoutX="161.0" layoutY="200.0" text="Contraseña:" />
        <PasswordField fx:id="contrasenaTextField" layoutX="231.0" layoutY="196.0" prefHeight="25.0" prefWidth="205.0" />

        <!-- Añadir fx:id y acción -->
        <Button fx:id="btnIniciarSesion" layoutX="145.0" layoutY="245.0" mnemonicParsing="false"
                prefHeight="25.0" prefWidth="311.0" text="Iniciar Sesión" />

        <!-- Añadir fx:id al label de error -->
        <Label fx:id="errorLabel" layoutX="212.0" layoutY="98.0" text="Correo o contraseña incorrectos"
               style="-fx-text-fill: red;" visible="false" />

        <!-- Añadir fx:id al label olvidado -->
        <Label fx:id="olvidadoLabel" layoutX="145.0" layoutY="295.0" prefHeight="17.0" prefWidth="190.0"
               text="He olvidado mi contraseña" underline="true" />
    </children>
</Pane>
